@using Nuevo.Entities.Concrete
@{
    ViewData["Title"] = "Public UI - Everyone can see this page";
}

@model IList<Personal>

<div class="row col-12">
    @foreach (var personal in Model)
    {
        <div class="card text-center col-5 m-auto" style="margin-top: 10px !important">
            <div class="card-body">
                <h4 class="card-title">Personal Informations</h4>
                <hr />
                <table class="table table-borderless table-hover table-responsive-sm table-responsive-md">
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                    </tr>
                    <tr>
                        <td>
                            @personal.Name
                        </td>
                        <td>
                            @personal.PhoneNumber
                        </td>
                    </tr>
                </table>
                <a asp-controller="Personal" asp-action="Detail" asp-route-id="@personal.Id" class="card-link">Details...</a>
            </div>
        </div>

    }
</div>